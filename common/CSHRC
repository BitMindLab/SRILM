# Note:  Your path should contain "/bin" and "/usr/local/bin"
#         before this file is "source"'d.
#

# If the user hasn't already set the value of the DECIPHER System
#  directory, default to the latest frozen version.
if (! $?DECIPHER) then
    setenv DECIPHER     /home/decipher/frozen/latest
endif

# Determine the machine type
if (! $?MACHINE_TYPE) then
   if (-e $DECIPHER/bin/machine-type) then 
	setenv MACHINE_TYPE `$DECIPHER/bin/machine-type`
   else
	setenv MACHINE_TYPE `mach`
   endif
endif

# Shorthand for DECIPHER (TM) directories.
setenv DI	    $DECIPHER/include
setenv DL	    $DECIPHER/lib/$MACHINE_TYPE
setenv DLG	    $DECIPHER/lib/$MACHINE_TYPE\_g
setenv DLP	    $DECIPHER/lib/$MACHINE_TYPE\_p
setenv DB	    $DECIPHER/bin/$MACHINE_TYPE
setenv DBG	    $DECIPHER/bin/$MACHINE_TYPE\_g
setenv DBP	    $DECIPHER/bin/$MACHINE_TYPE\_p
setenv DBX	    $DECIPHER/bin/$MACHINE_TYPE\_x

# Set the path shared by all machine types
set path = ($path $DECIPHER/bin $DECIPHER/unsupported/bin /usr/local/bin/rcs)

# Do machine type-dependent processing
if ($MACHINE_TYPE == sparc) then

   # Add sparc-specific directories to the path.
   # (There are none for now.)

   # Set up the man path to include other man page locations
   setenv MANPATH    /usr/man:/usr/local/man:/usr/lib/X11/man:/usr/local/bin/rcs/man

else # (Assume the machine type is "mips")

   # Add mips-specific directories to the path.
   # (There are none for now.)

endif


# Define aliases.


# Make targets with optimization.
alias make	'gnumake'             

# Make targets for debugging.
alias makeg	'gnumake OPTION=_g'

# Make targets for profiling.
alias makep	'gnumake OPTION=_p'

# Make targets for export.
alias makex	'gnumake OPTION=_x'
